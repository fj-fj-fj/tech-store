# http://editorconfig.org

root = True

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,ini}]
indent_style = space
indent_size = 4

[*.py]
line_lenth = 119

[*.{html,css,json,yml}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[docs/**.txt]
max_line_length = 79
